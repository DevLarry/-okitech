<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <title>Pricing - Brand</title>
    <!-- <link rel="stylesheet" href="/assets/css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i"
    />
    <link rel="stylesheet" href="/assets/fonts/fontawesome-all.min.css" />
    <link rel="stylesheet" href="/assets/fonts/simple-line-icons.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css"
    />
    <link rel="stylesheet" href="/assets/css/vanilla-zoom.min.css" />
  </head>

  <body>
    <%- include('./partials/nav')%>
    <main class="page pricing-table-page">
      <section class="clean-block clean-pricing dark">
        <div class="container">
          <div class="block-heading">
            <h2 class="text-info">Pricing Table</h2>
            <p>Price list</p>
          </div>
          <div class="row justify-content-center">
            <div class="col">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Good</th>
                      <th>Price Per Unit (N)</th>
                      <th>Add to Cart</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i= 0; i < services.length; i++){ %>
                    <tr>
                      <form action="/checkout" method="post">
                        <td><%= services[i].name %></td>
                        <td><%= services[i].price %></td>
                        <input
                          type="hidden"
                          name="id"
                          value="<%= services[i].id %>"
                        />
                        <td>
                          <button
                            type="button"
                            class="btn btn-primary my-cart-btn"
                            data-id="<%= services[i].name %>"
                            data-name="<%= services[i].name %>"
                            data-summary="<%= services[i].name %>"
                            data-price="<%= services[i].price %>"
                            data-quantity="1"
                            data-image="/favicon.ico"
                          >
                            Add to Cart
                          </button>
                        </td>
                        <!-- <td></td> -->
                      </form>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <%- include('./partials/footer') %>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="/assets/js/vanilla-zoom.js"></script>
    <script src="/assets/js/theme.js"></script>
  </body>
</html>
